{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"src/**/*.{js,ts,jsx,tsx}",
			"examples/**/*.{js,ts,jsx,tsx}",
			"tests/**/*.{js,ts,jsx,tsx}",
			"*.{js,ts,json}"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	}
}
