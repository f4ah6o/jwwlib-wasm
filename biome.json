{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "build-debug",
      "build-release",
      "coverage",
      "wasm/*.js",
      "wasm/*.wasm",
      "*.min.js",
      "*.map",
      "tests/e2e/playwright-report",
      "tests/e2e/test-results"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 80
  }
}